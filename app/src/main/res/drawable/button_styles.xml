<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" android:drawable="@color/button_pressed">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="1dip" android:drawable="@color/button_pressed" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@color/button_pressed">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="1dip" android:drawable="@color/button_pressed" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>
</selector>