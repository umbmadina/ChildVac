<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="14dp">

<android.support.v7.widget.CardView
    android:id="@+id/ticket_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginBottom="0dp"
    android:padding="10dp"
    app:cardCornerRadius="6.7dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ticket_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mon 24 Oct"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/ticket_vaccine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Influenza vaccine" />

                <TextView
                    android:id="@+id/ticket_room_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room 312" />

                <TextView
                    android:id="@+id/ticket_nurse_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nurses A and B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/ticket_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:30 - 08:40" />
                <TextView
                    android:id="@+id/ticket_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taken" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>