<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:padding="14dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:cardCornerRadius="6.7dp"
        android:padding="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/diagnosis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e2f5fb"
                android:orientation="horizontal"
                android:paddingLeft="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/gilroy_black"
                    android:gravity="center_vertical"
                    android:text="Influenza"
                    android:textColor="#5679bf"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/doctor"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:paddingLeft="52dp"
                android:layout_weight="6"
                android:padding="14dp">
                <ImageView
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:src="@drawable/oval"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:paddingRight="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#6a6a77"
                            android:text="Dr. Ayzhan Zhumabekova"
                            android:fontFamily="@font/gilroy_medium"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14.7sp"
                            android:textColor="#9ea4af"
                            android:text="Doctor Visit "
                            android:fontFamily="@font/gilroy_regular"
                            />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:textColor="#656589"
                    android:text="1/10/2018"
                    android:fontFamily="@font/gilroy_regular"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#9ea4af"
                    android:lineSpacingExtra="4sp"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="Due to the cold weather and seasonal viruses the  pacient caught Influenza."
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#2ed573"
                    android:text="Prescription"
                    android:fontFamily="@font/gilroy_black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#9ea4af"
                    android:lineSpacingExtra="8sp"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="Ibuprofen 3 times/day during 2 weeks."
                    />
            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>